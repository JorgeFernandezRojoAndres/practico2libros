<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Imagen del libro dentro de una CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPortada"
        android:layout_width="220dp"
        android:layout_height="280dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@android:color/black"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/imgLibro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="El Hobbit"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/cardPortada"
        app:layout_constraintStart_toEndOf="@id/cardPortada"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"/>

    <!-- Autor -->
    <TextView
        android:id="@+id/tvAutor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="J.R.R. Tolkien"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="@id/tvTitulo"/>

    <!-- Código -->
    <TextView
        android:id="@+id/tvCodigo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="400"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvAutor"
        app:layout_constraintStart_toStartOf="@id/tvAutor"/>

    <!-- Año -->
    <TextView
        android:id="@+id/tvAnio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1937"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvCodigo"
        app:layout_constraintStart_toStartOf="@id/tvAutor"/>

    <!-- Género -->
    <TextView
        android:id="@+id/tvGenero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Género: Fantasía"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/tvAnio"
        app:layout_constraintStart_toStartOf="@id/tvAnio"
        android:layout_marginTop="4dp"/>

    <!-- Chips de género (opcional, extra visual) -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupGeneros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvGenero"
        app:layout_constraintStart_toStartOf="@id/tvGenero"
        android:layout_marginTop="4dp"/>

    <!-- Descripción -->
    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripción del libro..."
        android:textSize="29sp"
        android:layout_marginTop="34dp"
        android:ellipsize="none"
        android:singleLine="false"
        android:scrollHorizontally="false"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/cardPortada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón Volver -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⬅ Volver"
        android:textSize="18sp"
        android:padding="12dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
